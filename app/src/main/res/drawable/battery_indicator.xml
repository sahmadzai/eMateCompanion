<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Black color for the border -->
            <corners android:radius="4dp"/>
            <size android:width="42dp" android:height="124dp"/>
        </shape>
    </item>
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <!-- Battery body -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Grey color for empty battery -->
            <corners android:radius="4dp"/>
        </shape>
        <!-- Battery level -->
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#4CAF50"/> <!-- Green color for battery level -->
                <corners android:radius="4dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
